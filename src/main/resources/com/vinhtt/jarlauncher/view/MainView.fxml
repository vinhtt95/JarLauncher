<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vinhtt.jarlauncher.view.MainViewController"
            prefWidth="800" prefHeight="600">

    <top>
        <ToolBar>
            <Button text="+ Add Project" onAction="#handleAddProject" style="-fx-font-size: 14px; -fx-background-color: #007aff; -fx-text-fill: white;"/>
        </ToolBar>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <TilePane fx:id="projectGrid" hgap="20" vgap="20" prefColumns="4">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </TilePane>
        </ScrollPane>
    </center>

</BorderPane>