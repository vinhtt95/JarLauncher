<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vinhtt.jarlauncher.view.ProjectCellController"
      alignment="CENTER"
      spacing="15"
      styleClass="project-card"
      prefWidth="220" prefHeight="220" onMouseClicked="#handleMouseClick">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <ImageView fx:id="iconView" fitWidth="128" fitHeight="128" preserveRatio="true"/>
    <Label fx:id="nameLabel" wrapText="true" textAlignment="CENTER"/>
</VBox>